<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net45;net40;netstandard1.1</TargetFrameworks>
    <Authors>sdcb</Authors>
    <Company />
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>0.1.3.0</Version>
    <Description>Real-time 2D rendering utilities based on SharpDX/Direct2D.</Description>
    <PackageReleaseNotes>0.1.3:
Upgrade to SharpDX 4.1.0
Remove SolidColorBrushManager.</PackageReleaseNotes>
    <PackageProjectUrl>https://github.com/sdcb/FlysEngine</PackageProjectUrl>
    <RepositoryUrl>https://github.com/sdcb/FlysEngine</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="SharpDX" Version="4.1.0" />
    <PackageReference Include="SharpDX.Animation" Version="4.1.0" />
    <PackageReference Include="SharpDX.Direct2D1" Version="4.1.0" />
    <PackageReference Include="SharpDX.Direct3D11" Version="4.1.0" />
    <PackageReference Include="SharpDX.DXGI" Version="4.1.0" />
    <PackageReference Include="SharpDX.Mathematics" Version="4.1.0" />
  </ItemGroup>

</Project>
